<div class="container-md mt-2 bg-white shadow-sm rounded-3">
  <div class="row py-2 d-flex justify-content-end">
    <div class="col-9 col-sm-10">
      <div class="row">
        <div class="col-12 d-flex justify-content-between">
          <h4 class="fw-bold"><%= current_user.name %></h4>
          <p class="m-0 d-none d-md-block"><%= "前回ログイン：#{current_user.last_sign_in_at}" %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-12 p-0">
          <ul class="m-0">
            <li class="list-unstyled"><%= current_user.prefecture.name if current_user.prefecture.present? %></li>
            <li class="list-unstyled"><%= current_user.introduction if current_user.introduction.present? %></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-2 col-sm-1 p-0 d-flex justify-content-center align-items-center">
      <%= link_to "編集", edit_user_registration_path %>
    </div>
  </div>
</div>
